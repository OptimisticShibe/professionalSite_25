---
import { Image } from "astro:assets";
import type { TechItem } from "@components/Projects/ProjectPage.astro";

interface Props {
  technologies: TechItem[];
  preview?: boolean;
}

const { technologies, preview = false } = Astro.props;
---

{
  preview ? (
    <ul class="grid grid-cols-2 md:grid-cols-3 list-none gap-2 not-prose pb-5">
      {technologies.map((tech) => {
        return (
          <li class="p-2 rounded-sm dark:bg-zinc-700 bg-zinc-200 flex gap-2 shadow-sm">
            <Image src={tech.techLogo?.img} alt={tech.techLogo?.imgAlt} class:list={["w-6 my-auto max-h-6", `${tech.techLogo.invert ? "dark:invert" : ""}`]} />
            {tech.techName}
          </li>
        );
      })}
    </ul>
  ) : (
    <ul class="grid grid-cols-2 xs:grid-cols-3 list-none gap-2 not-prose pb-5 justify-items-center">
      {technologies.map((tech) => {
        return (
          <li class="p-2 rounded-sm dark:bg-zinc-700 bg-zinc-200 flex flex-col gap-2 shadow-sm justify-center-safe items-center-safe w-36 xs:w-40">
            <Image
              src={tech.techLogo?.img}
              alt={tech.techLogo?.imgAlt}
              class:list={["w-12 my-auto max-h-12", `${tech.techLogo.invert ? "dark:invert" : ""}`]}
            />
            <span>{tech.techName}</span>
          </li>
        );
      })}
    </ul>
  )
}
