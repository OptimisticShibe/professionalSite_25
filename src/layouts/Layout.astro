---
import Footer from "@components/Footer.astro";
import TopNav from "@components/TopNav/TopNav.astro";
import { name } from "src/constants";

interface Props {
  centered?: boolean;
}

const { centered = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link href="../src/styles/global.css" rel="stylesheet" />
    <title>{name}</title>
  </head>
  <body>
    <div class:list={["min-h-full min-w-full bg-zinc-800 prose prose-invert flex flex-col gap-10", ` ${centered ? "justify-between " : ""}`]}>
      <TopNav />
      <div class="grow">
        <slot />
      </div>
      <!-- <Footer /> -->
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
